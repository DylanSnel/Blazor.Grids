<Project Sdk="Microsoft.NET.Sdk.Razor">
  <Import Project="package.csproj" Condition="Exists('package.csproj')" />
  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net5.0</TargetFrameworks>
    <RazorLangVersion Condition=" '$(TargetFramework)' != 'net5.0' ">3.0</RazorLangVersion>
    <PackageId>Excubo.Blazor.Grids</PackageId>
    <RootNamespace>Excubo.Blazor.Grids</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Excubo.Generators.Blazor" Version="1.13.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.14" Condition=" '$(TargetFramework)' == 'netstandard2.1' " />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.14" Condition=" '$(TargetFramework)' == 'netstandard2.1' " />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="5.0.5" Condition=" '$(TargetFramework)' == 'net5.0' " />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.5" Condition=" '$(TargetFramework)' == 'net5.0' " />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>
</Project>