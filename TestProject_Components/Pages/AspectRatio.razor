@page "/aspect_ratio"
<h3>GridDemo</h3>

<Grid AspectRatio="1.25">
    <Rows Count="4" />
    <Columns Count="4" />
    <Element Column="0" Row="0">
        <div style="background-color: purple; width: 100%; height: 100%"></div>
    </Element>
    <Element Column="0" Row="1">
        <div style="background-color: pink; width: 100%; height: 100%"></div>
    </Element>
    <Element Column="1" Row="0">
        <div style="background-color: gray; width: 100%; height: 100%"></div>
    </Element>
    <Element Column="1" Row="1">
        <div style="background-color: green; width: 100%; height: 100%"></div>
    </Element>
    <Element Column="1" ColumnSpan="2" Row="2">
        <div style="background-color: cyan; width: 100%; height: 100%"></div>
    </Element>
    <Element Column="2" Row="2" RowSpan="2">
        <div style="background-color: #88884488; width: 100%; height: 100%"></div>
    </Element>
</Grid>

