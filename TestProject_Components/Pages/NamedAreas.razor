@page "/named_areas"

@code {
    private bool mobile { get; set; }
    private int sidebar_height { get; set; } = 3;
    private int sidebar_width { get; set; } = 1;
    private int content_height { get; set; } = 2;
    private int content_row { get; set; } = 1;
    private int offset_left { get; set; } = 1;
    private int width { get; set; } = 2;
    private void ToggleLayout()
    {
        if (mobile)
        {
            sidebar_height = 3;
            sidebar_width = 1;
            content_row = 1;
            content_height = 2;
            offset_left = 1;
            width = 2;
            mobile = false;
        }
        else
        {
            sidebar_height = 1;
            sidebar_width = 3;
            content_row = 2;
            content_height = 1;
            offset_left = 0;
            width = 3;
            mobile = true;
        }
    }
}

